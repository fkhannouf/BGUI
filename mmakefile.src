#MM bgui-setup
bgui-setup : makedirs
	@$(CP) $(SRCDIR)/$(CURDIR)/s/Package-Startup $(BGUISDIR)
	@$(CP) $(SRCDIR)/$(CURDIR)/s/Package-Shutdown $(BGUISDIR)
	$(MKDIR) $(AROS_PACKAGES)
	$(ECHO) "Extras:BGUI" >$(AROS_PACKAGES)/BGUI
        
#MM
bgui-includes-copy : $(INCLUDE_FILES)
bgui-includes-copy : $(INCLUDE_FILES)

makedirs : 
	@$(MKDIR) $(GENDIR)/$(CURDIR)/bin
	@$(MKDIR) $(INCLUDES_DIR)
